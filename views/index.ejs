<html>

<head>
    <title>
        Home Page
    </title>
    <link rel="stylesheet" href="/static/style/index.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
 </head>

<body>
    <div id="navbar">
        <div class="nav-flex">
            <p>Coolest team</p>
        </div>
        <div id="search-flex">
            <form class="example">
                <input type="text" placeholder="Search.." name="search">
                <button type="submit"><i class="fa fa-search"></i></button>
            </form>

        </div>
        <div id="buttons">
            <a href="/user" class="profile"> <img
                    src="https://st3.depositphotos.com/6672868/13701/v/450/depositphotos_137014128-stock-illustration-user-profile-icon.jpg"
                    class="profile-img"> </a>
            <form action="/auth/logout" method="post">
                <button id="logout">
                    <i class="fa fa-sign-out"></i>
                </button>
            </form>

        </div>

    </div>
    <hr>
    <p>
    <div id="timeline">
        <div id="user-post">
            <h1>Create a new post!</h1>
            <textarea placeholder="What's on your mind?" name="post-content" id="input-post" rows="5"></textarea>
            <form>
                <button type="submit" id="create_post"> post </button>
            </form>
        </div>
        <% posts.forEach(function(post) { %>
            <div class="users-post">
                <div class="container">
                    <a href="/user/<%= post.userid %>" class="profile">
                        <img src="https://st3.depositphotos.com/6672868/13701/v/450/depositphotos_137014128-stock-illustration-user-profile-icon.jpg"
                            class="profile-img">
                    </a>
                    <div class="user-text">
                        <h1><%= post.author.username %></h1>
                        <h2><%= post.postedOn.toLocaleString() %></h2>
                    </div>
                </div>
                <br>
                <p class="post-content" rows="15"><%= post.content %></p>
                <div class="reactions">
                    <button class="action"><i class="fa-solid fa-heart"></i> love</button>
                    <button class="action"><i class="fa-sharp fa-solid fa-comments"></i> comment</button>
                </div>
                <div class="comment-list">
                    <% post.comments.forEach(function(comment) { %>
                        <div class="comment">
                            <a href="/user/<%= comment.userid %>" class="comment-img">
                                <img src="https://st3.depositphotos.com/6672868/13701/v/450/depositphotos_137014128-stock-illustration-user-profile-icon.jpg"
                                    class="profile-img">
                            </a>
                            <div class="comment-content">
                                <h1>Comment By <%= comment.author.username %> â€¢ <%= comment.postedOn.toLocaleString() %></h1>
                                <p><%= comment.content %></p>
                            </div>
                        </div>
                    <% }) %>
                </div>
                <div class="comment-box">
                    <a href="/user/<%= profile.userid %>" class="profile">
                        <img src="https://st3.depositphotos.com/6672868/13701/v/450/depositphotos_137014128-stock-illustration-user-profile-icon.jpg"
                            class="profile-img">
                    </a>
                    <div class="user-comment">
                        <h1><%= profile.username %></h1>
                        <div class="post-comment">
                            <form class="flex-comment-area">
                                <input type="text" placeholder="Write a comment" name="comment-input" class="comment-input">
                                <button type="submit" class="post-the-comment"><i class="fa-solid fa-paper-plane"></i></button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
    </div>
    </p>
</body>

</html>